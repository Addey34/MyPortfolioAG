---
import Card from '../Card.astro'
import TimeZoneV2 from './TimeZoneCardV2'
---

<Card colSpan="lg:col-span-2" rowSpan="md:row-span-2" title="Time zone">
  <time
    datetime=""
    id="timeDisplay"
    class="w-50 xl:w-100 flex h-[calc(100%-28px)] items-center justify-center font-serif text-2xl xl:whitespace-nowrap xl:text-5xl"
  >
    <TimeZoneV2 timezone="America/Bogota" client:load />
  </time>
</Card>
