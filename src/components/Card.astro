---
import { SquareArrowOutUpRight } from 'lucide-react'
import ContentCard from './ContentCard.astro'
import { Card as ShadcnCard } from './ui/card'

interface Props {
  title?: string
  body?: string
  colSpan?: string
  rowSpan?: string
  href?: string
  colorText?: string
}

const { title, body, colSpan, rowSpan, href, colorText } = Astro.props
---

<ShadcnCard
  className={`card-animate transform-y-[-40%] align-start perspective-1200 group relative col-span-1 flex h-full w-full flex-none flex-col justify-start overflow-hidden px-6 pb-6 pt-4 shadow-lg transition duration-75 ease-in-out ${
    colSpan || ''
  } ${rowSpan || ''} ${href ? 'cursor-pointer hover:border-primary' : ''}`}
>
  {
    href ? (
      <a href={href} class={`flex h-full w-full flex-col ${colorText || ''}`}>
        <SquareArrowOutUpRight
          className="group-hover:text-primary absolute right-6"
          size={20}
        />
        <ContentCard title={title} body={body}>
          <slot />
        </ContentCard>
      </a>
    ) : (
      <ContentCard title={title} body={body}>
        <slot />
      </ContentCard>
    )
  }
</ShadcnCard>
